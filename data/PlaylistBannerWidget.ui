<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkImage" id="image1">
    <property name="can_focus">0</property>
    <property name="icon_name">media-playback-start-symbolic</property>
  </object>
  <object class="GtkImage" id="image5">
    <property name="can_focus">0</property>
    <property name="icon_name">media-playlist-shuffle-symbolic</property>
  </object>
  <object class="GtkImage" id="image7">
    <property name="can_focus">0</property>
    <property name="icon_name">view-more-symbolic</property>
  </object>
  <object class="GtkGrid" id="widget">
    <property name="can_focus">0</property>
    <property name="valign">center</property>
    <property name="column_spacing">15</property>
    <child>
      <object class="GtkLabel" id="title">
        <property name="height_request">32</property>
        <property name="can_focus">0</property>
        <property name="halign">start</property>
        <property name="margin-start">15</property>
        <property name="margin_start">6</property>
        <property name="margin_end">5</property>
        <property name="hexpand">1</property>
        <property name="label">title</property>
        <property name="ellipsize">end</property>
        <property name="track_visited_links">False</property>
        <property name="xalign">0</property>
        <attributes>
          <attribute name="weight" value="bold"></attribute>
        </attributes>
        <layout>
          <property name="column">0</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="duration">
        <property name="can_focus">0</property>
        <property name="halign">start</property>
        <layout>
          <property name="column">2</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkGrid" id="box-buttons">
        <property name="can_focus">0</property>
        <property name="halign">end</property>
        <property name="valign">center</property>
        <property name="margin-end">15</property>
        <child>
          <object class="GtkButton" id="play_button">
            <property name="receives_default">1</property>
            <property name="tooltip_text" translatable="yes">Play</property>
            <property name="halign">start</property>
            <property name="image">image1</property>
            <signal name="clicked" handler="_on_play_button_clicked" swapped="no"/>
            <style>
              <class name="banner-button"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="shuffle_button">
            <property name="receives_default">1</property>
            <property name="tooltip_text" translatable="yes">Play playlist randomized</property>
            <property name="halign">start</property>
            <property name="image">image5</property>
            <signal name="clicked" handler="_on_shuffle_button_clicked" swapped="no"/>
            <style>
              <class name="banner-button"/>
            </style>
            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="menu_button">
            <property name="receives_default">1</property>
            <property name="halign">start</property>
            <property name="image">image7</property>
            <signal name="clicked" handler="_on_menu_button_clicked" swapped="no"/>
            <style>
              <class name="banner-button"/>
            </style>
            <layout>
              <property name="column">2</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <style>
          <class name="linked"/>
        </style>
        <layout>
          <property name="column">3</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkSpinner" id="spinner">
        <property name="width_request">48</property>
        <property name="height_request">48</property>
        <property name="can_focus">0</property>
        <layout>
          <property name="column">1</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
